from textblob import TextBlob
texts = [ "I love this product! It's amazing ğŸ˜",
    "This is the worst thing I ever bought ğŸ˜¡",
    "It's okay, not too bad but not great either."]

for t in texts:
    blob = TextBlob(t)
    sentiment = blob.sentiment.polarity  
    if sentiment > 0:
        label = "Positive ğŸ˜€"
    elif sentiment < 0:
        label = "Negative ğŸ˜ "
    else:
        label = "Neutral ğŸ˜"

    print(f"Text: {t}\nSentiment: {label}\n")
